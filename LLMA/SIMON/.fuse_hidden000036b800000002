<script type="text/javascript">

function nuevaPartida() {
	Simon = new Array();
	turnoJugador = false;
	simon();
}

function reproducir(a) {
	for (var i = 0; i < a.length; i++) {
		alert(test);
		setTimeout(document.getElementById(a[i]).className = "", 700);
		setTimeout(document.getElementById(a[i]).className = "grayscale", 700);
		alert(test);
	}
}

function cambiar() {
	document.getElementById("1").className = "";
}

function simon() {
	Simon = [1,2,3,4];
	reproducir(Simon);
}


